# Octopus Energy API Configuration
# Copy this file to .env and fill in your actual values

# Octopus Energy API Key
# Get this from your Octopus Energy account dashboard
OCTOPUS_API_KEY=your_api_key_here

# Smart Meter Configuration
# MPAN: Meter Point Administration Number
MPAN=your_mpan_here

# Serial Number: Your electricity meter serial number
SERIAL_NUMBER=your_serial_number_here

# Optional: API Base URL (default is Octopus Energy API)
# API_BASE_URL=https://api.octopus.energy/v1

PGPASSWORD=your_master_password
